<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.ResultsActivity"
    tools:showIn="@layout/activity_results">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <View
                android:id="@+id/donuts_separator"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:visibility="invisible"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
             />

            <app.futured.donut.DonutProgressView
                android:id="@+id/donut_politifact"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:paddingTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/donuts_separator"
                app:donut_bgLineColor="@color/hint"
                app:donut_gapWidth="0"
                app:donut_gapAngle="270"
                app:donut_cap="100"
                app:donut_animateChanges="true"
                app:donut_animationDuration="1500"
                app:donut_strokeWidth="14dp">
            </app.futured.donut.DonutProgressView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/politifact_dataset"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/donuts_separator"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/politifact_label"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textStyle="italic"
                    android:textSize="20sp"
                />

                <TextView
                    android:id="@+id/politifact_score"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/text"
                    android:textStyle="bold"
                    android:textSize="19sp"
                />
            </LinearLayout>

            <TextView
                android:id="@+id/politifact_dataset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/donut_politifact"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/donuts_separator"
                android:text="@string/politifact"
                android:textColor="@color/text"
                android:textSize="16sp"
            />

            <app.futured.donut.DonutProgressView
                android:id="@+id/donut_gossipcop"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:paddingTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/donuts_separator"
                app:donut_bgLineColor="@color/hint"
                app:donut_gapWidth="0"
                app:donut_gapAngle="270"
                app:donut_cap="100"
                app:donut_animateChanges="true"
                app:donut_animationDuration="1500"
                app:donut_strokeWidth="14dp">
            </app.futured.donut.DonutProgressView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/gossipcop_dataset"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/donuts_separator"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/gossipcop_label"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textStyle="italic"
                    android:textSize="20sp"
                    />

                <TextView
                    android:id="@+id/gossipcop_score"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/text"
                    android:textStyle="bold"
                    android:textSize="19sp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/gossipcop_dataset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/donut_gossipcop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/donuts_separator"
                android:text="@string/gossipcop"
                android:textColor="@color/text"
                android:textSize="16sp"
                />

            <View
                android:id="@+id/horizontal_separator"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/politifact_dataset"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/separator"
            />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/news_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/horizontal_separator"
            />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/news_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/news_image"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:paddingBottom="5dp"
                android:textColor="@color/text"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="8dp"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
